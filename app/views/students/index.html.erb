
<div class="container-fluid">
    <h4 class="mt-4">Student Upload</h4>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="index.html">Student</a></li>
        <li class="breadcrumb-item active">Upload</li>
    </ol>
    <div class="card mb-4">
        <div class="card-body">
          <%= form_tag import_students_path, multipart: true   do %>
            <%= file_field_tag :file    %>
            <%= submit_tag "Upload Students" ,   class: 'btn btn-primary  ' %>
          <% end %>
             .
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Student List
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable1" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                          <th>name</th>
                          <th>caste</th>
                          <th>admission_year</th>
                          <th>student_class</th>
                          <th>branch</th>
                          <th>application_id</th>
                          <th>tution_fee</th>
                          <th>devlopment_fee</th>
                          <th>other_fee</th>
                          <th>total</th>
                          <th>mobile</th>
                        </tr>
                    </thead>

                    <tbody>
                      <% @students.each do |s| %>
                      <tr>
                        <td><%= s.name%></td>
                        <td><%= s.caste%></td>
                        <td><%= s.admission_year%></td>

                        <td><%= s.student_class%></td>
                        <td><%= s.branch%></td>
                        <td><%= s.application_id%></td>
                        <td><%= s.tution_fee%></td>
                        <td><%= s.devlopment_fee%></td>
                        <td><%= s.other_fee%></td>
                        <td><%= s.total%></td>


                        <td><%= s.mobile%></td>

                      </tr>
                       <% end %>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>

<script type="text/javascript">
  $(document).ready(function() {


    $('#dataTable1').DataTable( {
          order: [[2, 'asc']],
          rowGroup: {
              dataSrc: 2
          }
      } );
  });
</script>
